<div class="row ShortCutChat ">
    <div class="col-3 ShortCutChatImgContainer">
        <img class="ProfilePicture" src="@Value.B64Photo" />
    </div>
    <div class="col-7" style="margin-top:5px">
        <div class="row">
            <div class="col-7 User">
                @Value.ContactName
            </div>
        </div>
        <div class="row">
            <div class="col-1 MessageStatusContainer">
                @if (Value.CallStatus)
                {
                    <img src="/img/succeedCall.PNG" />
                }
                else
                {
                    <img src="/img/lostCall.PNG" />
                }
            </div>
            <div class="col-9 Message">
                @Value.CallDate
            </div>
        </div>
    </div>
    <div class="col-2 PhoneCallContainer">
        @if (Value.WasPhoneCall)
        {
            <img src="/img/callIcon.PNG" />
        }
        else
        {
            <img src="/img/videoCall.PNG" />
        }
    </div>
</div>
@code {
    [Parameter]
    public LlamadaGeneralEntity Value { get; set; }
}
